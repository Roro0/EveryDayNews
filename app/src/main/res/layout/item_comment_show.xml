<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_item_comment_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"
                />
            <TextView
                android:id="@+id/tv_item_comment_account"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="account"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tv_item_comment_time"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="time"
                android:textSize="18sp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_comment_comment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="评论"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:gravity="left|center_vertical"/>
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/CollectGrey"/>
</LinearLayout>