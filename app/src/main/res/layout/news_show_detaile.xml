<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/btn_1">
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@mipmap/back"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center"
        >
    <TextView
        android:id="@+id/tv_news_show_detaile_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="新闻详情"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_gravity="center"
        />
        <TextView
            android:id="@+id/tv_news_show_detaile_tie"
            android:layout_alignBaseline="@id/tv_news_show_detaile_title"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="171跟帖"
            android:textSize="18sp"
            android:background="@color/tie_background"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_news_detail_collect"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
    android:layout_gravity="center"
        android:src="@mipmap/news_menu"/>
</LinearLayout>
    </LinearLayout>
    <WebView
        android:id="@+id/webView_news_dateil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

    </WebView>
</LinearLayout>